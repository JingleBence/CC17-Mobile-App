<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EFE3"
    android:id="@+id/drawer_layout"
    tools:context=".Profile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Profiletoolbar"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="287dp"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/HomeProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:logo="@drawable/ic_menu"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/balay"
                android:layout_width="62dp"
                android:layout_height="51dp"
                android:layout_marginStart="148dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/home" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="810dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="174dp"
                android:layout_height="167dp"
                android:layout_marginStart="118dp"
                android:layout_marginEnd="119dp"
                android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/user"></ImageView>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="119dp"
                android:layout_height="39dp"
                android:layout_marginStart="146dp"
                android:layout_marginEnd="146dp"
                android:layout_marginBottom="13dp"
                android:autoSizeTextType="uniform"
                android:text="John Doe"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2">

            </TextView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="217dp"
                android:layout_height="45dp"
                android:layout_marginStart="97dp"
                android:layout_marginEnd="97dp"
                android:autoSizeTextType="uniform"
                android:text="john10Doe@gmail.com"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

            </TextView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="178dp"
                android:layout_height="29dp"
                android:layout_marginStart="118dp"
                android:layout_marginEnd="115dp"
                android:layout_marginBottom="26dp"
                android:autoSizeTextType="uniform"
                android:text="Joined April of 2022"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/cardView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="380dp"
                android:layout_height="350dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="100dp"
                app:cardBackgroundColor="#859096"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="205dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:autoSizeTextType="uniform"
                    android:text="Contact Information"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    android:autoSizeTextType="uniform"
                    android:text="Contact No:."
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp"
                    android:autoSizeTextType="uniform"
                    android:text="Address:"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="170dp"
                    android:autoSizeTextType="uniform"
                    android:text="Zip Code:"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="220dp"
                    android:autoSizeTextType="uniform"
                    android:text="Gender:"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="70dp"
                    android:autoSizeTextType="uniform"
                    android:text="09085796372"
                    android:textColor="@color/white"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="120dp"
                    android:autoSizeTextType="uniform"
                    android:text="Baguio City"
                    android:textColor="@color/white"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="145dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="170dp"
                    android:autoSizeTextType="uniform"
                    android:text="2600"
                    android:textColor="@color/white"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="78dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="220dp"
                    android:autoSizeTextType="uniform"
                    android:text="Male"
                    android:textColor="@color/white"
                    android:textStyle="italic">

                </TextView>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="280dp"
                    android:backgroundTint="#060b4e"
                    android:text="edit"
                    android:textColor="@color/white"
                    android:textSize="20dp"></Button>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_header_menu"
        android:theme="@style/navigationTheme"
        android:background="#e6e6e6"
        />

</androidx.drawerlayout.widget.DrawerLayout>