<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EFE3"
    android:id="@+id/drawer_layout"
    tools:context=".Services">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Profiletoolbar"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="287dp"
                android:layout_marginBottom="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/HomeProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:logo="@drawable/ic_menu"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/servicesHome"
                android:layout_width="62dp"
                android:layout_height="51dp"
                android:layout_marginStart="148dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/home" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="133dp"
                android:layout_height="47dp"
                android:layout_marginStart="139dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="139dp"
                android:layout_marginBottom="451dp"
                android:autoSizeTextType="uniform"
                android:text="SERVICES"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Apliance"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#060b4e"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14">

                <TextView
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="45dp"
                    android:autoSizeTextType="uniform"
                    android:text="Appliance Repair"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Carpentry"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="56dp"
                android:backgroundTint="#060b4e"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Apliance">

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="90dp"
                    android:autoSizeTextType="uniform"
                    android:text="Carpentry"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Electrical"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#060b4e"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Carpentry">

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="90dp"
                    android:autoSizeTextType="uniform"
                    android:text="Electrical"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Welding"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="79dp"
                android:backgroundTint="#060b4e"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Plumbing">

                <TextView
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:autoSizeTextType="uniform"
                    android:text="Welding Repair"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Plumbing"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="26dp"
                android:backgroundTint="#060b4e"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Electrical">

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="90dp"
                    android:autoSizeTextType="uniform"
                    android:text="Plumbing"
                    android:textColor="@color/white">

                </TextView>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_header_menu"
        android:theme="@style/navigationTheme"
        android:background="#e6e6e6"
        />

</androidx.drawerlayout.widget.DrawerLayout>