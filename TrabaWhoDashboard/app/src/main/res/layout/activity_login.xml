<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#D5EFE3"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView1"
            android:layout_width="326dp"
            android:layout_height="233dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:srcCompat="@drawable/logo"></com.google.android.material.imageview.ShapeableImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#698dba"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="226dp"
                android:layout_height="52dp"
                android:autoSizeTextType="uniform"
                android:text="Welcome Back!"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                >
            </TextView>

            <TextView
                android:layout_width="226dp"
                android:layout_height="52dp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:text="Login to your account"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                >
            </TextView>

            <TextView
                android:layout_width="145dp"
                android:layout_height="31dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="150dp"
                android:autoSizeTextType="uniform"
                android:text="Email:"
                android:textColor="@color/white">

            </TextView>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:background="@color/white"
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="31dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="250dp"
                android:autoSizeTextType="uniform"
                android:text="Password:"
                android:textColor="@color/white">

            </TextView>

            <EditText
                android:id="@+id/editTextPass"
                android:background="@color/white"
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="290dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/Login"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="370dp"
                android:backgroundTint="#060b4e"
                android:text="Login"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                >

            </Button>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>