<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#baccc3"
    tools:context=".ApplianceRepair">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="208dp"
            android:layout_height="49dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="6dp"
            android:autoSizeTextType="uniform"
            android:text="Appliance Repair"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/messagesHome"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </TextView>

        <ImageView
            android:id="@+id/applianceHome"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/home" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="820dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="189dp"
            android:layout_height="230dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#c3ceda"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="169dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/img"
                android:layout_gravity="center_horizontal"
                >
            </ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="140dp"
                android:layout_gravity="center_horizontal"
                android:text="Air Conditioner"
                android:textColor="@color/black"
                >
            </TextView>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="70dp"
                android:text="Hire now"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"
                >
            </Button>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="189dp"
            android:layout_height="230dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#c3ceda"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="169dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/img_1"
                android:layout_gravity="center_horizontal"
                >
            </ImageView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:autoSizeTextType="uniform"
                android:text="Oven"
                android:textColor="@color/black"></TextView>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="70dp"
                android:text="Hire now"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"
                >

            </Button>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="189dp"
            android:layout_height="230dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="416dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#c3ceda"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="169dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/img_2"
                android:layout_gravity="center_horizontal"
                >
            </ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="140dp"
                android:layout_gravity="center_horizontal"
                android:text="Refrigerator "
                android:textColor="@color/black"
                >
            </TextView>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="70dp"
                android:text="Hire now"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"

                >
            </Button>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="189dp"
            android:layout_height="230dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="416dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#c3ceda"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/card_view1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="169dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/img_3"
                android:layout_gravity="center_horizontal"
                >
            </ImageView>

            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="140dp"
                android:layout_gravity="center_horizontal"
                android:text="Washing Machine"
                android:textColor="@color/black"
                >
            </TextView>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="70dp"
                android:text="Hire now"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"
                >
            </Button>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>